{
  "cli": {
    "version": ">= 3.0.0",
    "requireCommit": false
  },
  "build": {
    "base": {
      "node": "18.18.0",
      "env": {
        "NPM_CONFIG_LEGACY_PEER_DEPS": "true"
      }
    },
    "development": {
      "extends": "base",
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "simulator": false
      }
    },
    "preview": {
      "extends": "base",
      "distribution": "internal",
      "ios": {
        "simulator": false
      }
    },
    "production": {
      "extends": "base",
      "ios": {
        "simulator": false
      },
      "android": {
        "buildType": "apk"
      },
      "install": {
        "command": "npm install --legacy-peer-deps"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
